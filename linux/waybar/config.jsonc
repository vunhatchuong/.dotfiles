{
    "layer": "top",
    "position": "top",
    "height": 30, // Waybar height (to be removed for auto height)
    "margin": 6,
    "reload_style_on_change": true,

    "include": [
        "~/.config/waybar/modules.jsonc"
    ],
    "modules-left": [
        "hyprland/workspaces"
    ],
    "modules-center": [
        "idle_inhibitor",
        "clock"
    ],
    "modules-right": [
        // Left
        "tray",
        // Middle
        "backlight",
        "network",
        "bluetooth",
        "battery",
        "pulseaudio",
        "pulseaudio#microphone",
        // Right
        "custom/separator#line",
        "hyprland/language",
        "custom/power"
    ]
}
